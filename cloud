### IoT Cloud Operations Repository

# This script simulates an IoT device publishing data to AWS IoT Core.
import time
import json
import paho.mqtt.client as mqtt

# AWS IoT Core Endpoint (Replace with your actual endpoint)
AWS_IOT_ENDPOINT = "your-aws-iot-endpoint.amazonaws.com"
TOPIC = "iot/sensor/data"

# MQTT Client Setup
client = mqtt.Client()
client.connect(AWS_IOT_ENDPOINT, 8883, 60)

def publish_sensor_data():
    while True:
        data = {
            "temperature": round(20 + 10 * (0.5 - time.time() % 1), 2),
            "humidity": round(50 + 20 * (0.5 - time.time() % 1), 2)
        }
        client.publish(TOPIC, json.dumps(data))
        print(f"Published: {data}")
        time.sleep(5)

if __name__ == "__main__":
    publish_sensor_data()
